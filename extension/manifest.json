{
  "manifest_version": 3,
  "name": "Smart Web Client Recorder",
  "version": "0.1.0",
  "description": "Local WorkMobile step recorder for Sam2.0",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["https://*.esayworkmobile.co.uk/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Smart Recorder",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.esayworkmobile.co.uk/*"],
      "js": ["content.js"]
    }
  ]
}
